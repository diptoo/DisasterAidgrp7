<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E0E0E0"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#E0E0E0"

        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/button_shape"
                android:padding="10dp"
                android:text=" Name :"
                android:textColor="@color/black"
                 />

            <TextView
                android:id="@+id/donator_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                android:padding="15dp"
                android:text="Name Output"
                android:textColor="@color/black"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_shape"
                android:padding="10dp"
                android:text=" Address :"

                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black" />

            <TextView
                android:id="@+id/donator_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:padding="15dp"
                android:text="Address Output"
                android:textColor="@color/black"
                />


        </LinearLayout>


        <Button
            android:id="@+id/gmap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="8dp"
            android:text="find on google map"
            android:background="@drawable/button"
            android:textColor="@color/white"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_shape"
                android:padding="10dp"
                android:text=" Contact :"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/donator_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:padding="15dp"
                android:text="Contact Output"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <Button
            android:id="@+id/phonecall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="1dp"
            android:text="contact"
            android:background="@drawable/button"
            android:textColor="@color/white"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_shape"
                android:padding="10dp"
                android:text="Donation Type :"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/donate_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:padding="15dp"
                android:text="Donation Output"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_shape"
                android:padding="10dp"
                android:text="Donation Method :"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/donate_method"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:padding="15dp"
                android:text="Method Output"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_shape"
                android:padding="10dp"
                android:text="Amount :"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/donator_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:padding="15dp"
                android:text="Amount Output"
                android:textColor="@color/black"
                />
        </LinearLayout>

    </LinearLayout>
    </ScrollView>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/tw__composer_light_gray"

        app:itemIconTint="@drawable/new_item"
        app:itemTextColor="@drawable/new_item"
        app:menu="@menu/bottom_menu"
        />

</RelativeLayout>