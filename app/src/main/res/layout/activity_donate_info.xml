<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:padding="15dp">




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="DONATE HERE"
            android:padding="16dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="22sp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/donator_name"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_shape"
            android:hint=" Name"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/donator_address"
            android:layout_marginTop="12dp"
            android:background="@drawable/button_shape"
            android:hint="Address"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black" />

        <EditText
            android:id="@+id/donator_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/button_shape"
            android:hint="Contact No"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="DONATION TYPE"
    android:textColor="@android:color/black"
    android:textStyle="bold"
    android:layout_marginTop="15dp"
    android:textSize="18dp"
    />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginTop="12dp"
            android:background="@drawable/button_shape"
            android:entries="@array/donate_type"
            android:id="@+id/donate_type"
            >

        </Spinner>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DONATION METHOD"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:textSize="18dp"
            />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginTop="12dp"
            android:background="@drawable/button_shape"
            android:entries="@array/donate_method"
            android:id="@+id/donate_method"

            >

        </Spinner>

        <EditText
            android:id="@+id/donator_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape"
            android:hint="Amount"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"

            />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:id="@+id/button5"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="confirm"
            android:background="@drawable/button"
            />





    </LinearLayout>


</ScrollView>